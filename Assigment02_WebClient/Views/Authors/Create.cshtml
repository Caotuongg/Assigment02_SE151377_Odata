@model Assigment02_BussinessObject.Author
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

@{
    ViewData["Title"] = "Create Author";
}

<h1>Create Product</h1>

@if (ViewBag.ErrMsg != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrMsg
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="last_name" class="control-label">LastName</label>
                <input asp-for="last_name" class="form-control" />
                <span asp-validation-for="last_name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="first_name" class="control-label">FirstName</label>
                <input asp-for="first_name" class="form-control" />
                <span asp-validation-for="first_name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="email_address" class="control-label">EmailAddress</label>
                <input asp-for="email_address" class="form-control" />
                <span asp-validation-for="email_address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="phone" class="control-label">Phone</label>
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="address" class="control-label">Address</label>
                <input asp-for="address" class="form-control" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="city" class="control-label">City</label>
                <input asp-for="city" class="form-control" />
                <span asp-validation-for="city" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="state" class="control-label">State</label>
                <input asp-for="state" class="form-control" />
                <span asp-validation-for="state" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="zip" class="control-label">Zip</label>
                <input asp-for="zip" class="form-control" />
                <span asp-validation-for="zip" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

