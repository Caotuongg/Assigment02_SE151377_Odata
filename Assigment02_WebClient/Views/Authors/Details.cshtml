@model Assigment02_BussinessObject.Author
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

@{
    ViewData["Title"] = "Author Details";
}

<h1>Author Details</h1>

@if (ViewBag.ErrMsg != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrMsg
    </div>
}
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Author Information</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Last Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.last_name)</dd>

                    <dt class="col-sm-4">First Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.first_name)</dd>

                    <dt class="col-sm-4">EmailAddress:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.email_address)</dd>

                    <dt class="col-sm-4">Phone:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.phone)</dd>
                    
                    <dt class="col-sm-4">Address:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.address)</dd>
                    
                    <dt class="col-sm-4">City:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.city)</dd>
                    
                    <dt class="col-sm-4">State:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.state)</dd>
                    
                    <dt class="col-sm-4">Zip:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.zip)</dd>

                    @*<dt class="col-sm-4">Book:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.BookAuthor)</dd>*@
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.author_id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

