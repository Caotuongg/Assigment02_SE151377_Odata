@model Assigment02_BussinessObject.Author
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
@{
    ViewData["Title"] = "Delete Author";
}

<h1>Delete Author</h1>

@if (ViewBag.ErrMsg != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrMsg
    </div>
}

<div>
    <h4>Author Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">LastName:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.last_name)</dd>

        <dt class="col-sm-2">FirstName:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.first_name)</dd>

        <dt class="col-sm-2">EmailAddress:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.email_address)</dd>

        <dt class="col-sm-2">Phone:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.phone)</dd>

        <dt class="col-sm-2">Address:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.address)</dd>

        <dt class="col-sm-2">City:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.city)</dd>

        <dt class="col-sm-2">State:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.state)</dd>

        <dt class="col-sm-2">Zip:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.zip)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="author_id" />
        <div class="mt-3">
            <p class="text-danger">Are you sure you want to delete this author?</p>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

