            <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <label for="PublisherName">Email</label>
                <input asp-for="email_address" class="form-control" />
                <span asp-validation-for="email_address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="City">Souce</label>
                <input asp-for="source" class="form-control" />
                <span asp-validation-for="source" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="State">FirstName</label>
                <input asp-for="first_name" class="form-control" />
                <span asp-validation-for="first_name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Country">MiddleName</label>
                <input asp-for="middle_name" class="form-control" />
                <span asp-validation-for="middle_name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Country">LastName</label>
                <input asp-for="last_name" class="form-control" />
                <span asp-validation-for="last_name" class="text-danger"></span>
