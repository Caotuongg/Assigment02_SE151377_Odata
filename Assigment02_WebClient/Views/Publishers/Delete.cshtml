@model Assigment02_BussinessObject.Publisher
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

@{
    ViewData["Title"] = "Delete Publisher";
}

<h1>Delete Publisher</h1>

@if (ViewBag.ErrMsg != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrMsg
    </div>
}

<div>
    <h4>Author Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">PublisherName:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.publisher_name)</dd>

        <dt class="col-sm-2">City:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.city)</dd>

        <dt class="col-sm-2">State:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.state)</dd>

        <dt class="col-sm-2">Country:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.country)</dd>

       
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="pub_id" />
        <div class="mt-3">
            <p class="text-danger">Are you sure you want to delete this publisher?</p>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
