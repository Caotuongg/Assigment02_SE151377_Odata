@model Assigment02_BussinessObject.Book
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

@if (ViewBag.ErrMsg != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrMsg
    </div>
}

<div>
    <h4>Book Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Book Name:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.bookname)</dd>

        <dt class="col-sm-2">Title:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.title)</dd>

        <dt class="col-sm-2">Type:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.type)</dd>

        <dt class="col-sm-2">Price:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.price)</dd>

        <dt class="col-sm-2">Advance:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.advance)</dd>

        <dt class="col-sm-2">Royalty:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.royalty)</dd>

        <dt class="col-sm-2">YtdSales:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ytd_sales)</dd>

        <dt class="col-sm-2">Notes:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.notes)</dd>

        <dt class="col-sm-2">PublishedDate:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.published_date)</dd>

        <dt class="col-sm-2">Publisher:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Publisher.publisher_name)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="book_id" />
        <div class="mt-3">
            <p class="text-danger">Are you sure you want to delete this book?</p>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

